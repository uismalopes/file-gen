{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "ES2016"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "paths": {
      "@/*": ["./*"],
      "@utils": ["utils"],
      "@constants": ["constants"],
      "@commands": ["commands"],
      "@lib": ["library"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "**/*.test.ts"]
}
